{
  "name": "civup-bot",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.7",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "bun test",
    "register": "bun --env-file=.dev.vars src/register.ts",
    "secret:draft-webhook": "bun scripts/generate-draft-webhook-secret.ts --write",
    "secret:draft-webhook:print": "bun scripts/generate-draft-webhook-secret.ts",
    "kv:local": "bun scripts/kv-local.ts",
    "check": "tsgo --noEmit",
    "generate": "wrangler types",
    "l:migrate": "wrangler d1 migrations apply civup --local",
    "r:migrate": "wrangler d1 migrations apply civup --remote"
  },
  "dependencies": {
    "@civup/db": "workspace:*",
    "@civup/game": "workspace:*",
    "@civup/rating": "workspace:*",
    "discord-hono": "^0.20.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.8",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260206.0",
    "@types/node": "^25.2.1",
    "wrangler": "^4.22.0"
  }
}
