{
  "name": "civup-activity",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.7",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:prod": "bun --env-file=.prod.vars vite build",
    "preview": "vite preview --port 5173",
    "test": "bun test --preload ./tests/setup-dom.ts tests",
    "test:coverage": "bun test tests --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-dir=coverage",
    "check": "tsgo --noEmit",
    "portraits:webp": "bun ./scripts/convert-leaders-full-to-webp.ts --delete",
    "deploy": "bun run deploy:prod",
    "deploy:prod": "bun run build:prod && wrangler deploy",
    "secret:bulk:prod": "wrangler secret bulk .prod.secrets"
  },
  "dependencies": {
    "@civup/game": "workspace:*",
    "@civup/utils": "workspace:*",
    "@discord/embedded-app-sdk": "^2.4.0",
    "@fontsource-variable/inter": "^5.2.8",
    "partysocket": "^1.1.3",
    "solid-js": "^1.9.7",
    "unocss-merge": "^0.8.2"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/workers-types": "^4.20260206.0",
    "@happy-dom/global-registrator": "^20.6.1",
    "@iconify-json/gg": "^1.2.2",
    "@iconify-json/ph": "^1.2.2",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@unocss/reset": "^66.6.0",
    "unocss": "^66.6.0",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6",
    "wrangler": "^4.22.0"
  }
}
