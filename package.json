{
  "name": "civup",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test",
    "test:ui": "bun-test-ui -p 51299",
    "lint": "eslint . --fix",
    "check": "bun run --filter '*' check",

    "bot:dev": "bun --filter civup-bot run dev",
    "bot:register": "bun --filter civup-bot run register",
    "bot:migrate": "bun --filter civup-bot run l:migrate",
    "bot:migrate:remote": "bun --filter civup-bot run r:migrate",

    "party:dev": "bun --filter civup-party run dev",

    "db:generate": "bun --filter @civup/db run generate",
    "db:studio": "bun --filter @civup/db run studio",

    "update": "taze latest -wr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260206.1",
    "@unocss/eslint-plugin": "^66.6.0",
    "bun-test-ui": "^0.2.2",
    "discord-api-types": "^0.38.38",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-solid": "^0.14.5",
    "taze": "^19.9.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
